generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Website {
  id        String @id @default(uuid())
  url       String
  timeAdded DateTime
  ticks WebsiteTick[]
  regionId  String
  region Region @relation(fields: [regionId], references: [id])
}

model Region{
  id  String @id @default(uuid())
  name  String
  ticks WebsiteTick[]
  website Website[]
}

model WebsiteTick{
  id  String @id @default(uuid())
  response_time_ms  Int
  status WebsiteStatus
  regionId String 
  region    Region  @relation(fields:[regionId] , references:[id])
  websiteId String 
  website Website @relation(fields:[websiteId] , references:[id])

}

enum WebsiteStatus{
Up
Down
Unknown
}